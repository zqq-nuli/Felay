{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Felay",
  "version": "0.1.0",
  "identifier": "com.zhengmi.felay",
  "build": {
    "beforeDevCommand": "pnpm --dir .. dev",
    "beforeBuildCommand": "pnpm --dir .. build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Felay",
        "width": 640,
        "height": 480,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    }
  }
}
