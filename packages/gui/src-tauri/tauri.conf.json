{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Felay",
  "version": "0.1.22",
  "identifier": "com.zhengmi.felay",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": {
      "../../../build/felay.exe": "./",
      "../../../build/felay-daemon.exe": "./",
      "../../../build/felay-notify.js": "./",
      "../../../build/felay-claude-hook.js": "./",
      "../../../build/prebuilds/**/*": "prebuilds/"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerHooks": "nsis/hooks.nsi"
      }
    }
  },
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:14200"
  },
  "app": {
    "windows": [
      {
        "title": "Felay",
        "width": 640,
        "height": 480,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "id": "main"
    }
  }
}
