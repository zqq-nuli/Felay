{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Felay",
  "version": "0.1.0",
  "identifier": "com.zhengmi.felay",
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "build": {
    "beforeDevCommand": "pnpm --dir .. dev",
    "beforeBuildCommand": "pnpm --dir .. build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Felay",
        "width": 640,
        "height": 480,
        "resizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    }
  }
}
