{
  "name": "felay",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.5.2",
  "scripts": {
    "dev": "pnpm --parallel --filter @felay/daemon --filter @felay/cli dev",
    "dev:daemon": "pnpm --filter @felay/daemon dev",
    "dev:cli": "pnpm --filter @felay/cli dev",
    "dev:gui": "pnpm --filter @felay/gui dev",
    "build": "pnpm -r build",
    "setup": "pnpm install && pnpm build && pnpm --filter @felay/cli exec pnpm link --global",
    "build:gui": "cd packages/gui/src-tauri && cargo tauri build",
    "typecheck": "pnpm -r typecheck"
  }
}
